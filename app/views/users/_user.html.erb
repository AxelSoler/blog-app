<div class= 'user'>
  <div>
    <img class= 'image' src= <%= user.photo %>>
  </div>
  <%= link_to user_path(user.id) do %>
    <div class= 'user_info'>
      <p>Name: <%= user.name %></p>
      <p>Number of posts: <%= user.posts_counter %></p>
      <p>id: <%= user.id %></p>
    </div>
  <%end%>
</div>
<h2>New Comment</h2>

<section class= 'container'>
  <%= form_with model: @comment, url: user_post_comments_path, local: true, method: :post do |f| %>
    <div>
      <%= f.label :text %>
      <%= f.text_area :text %>
    </div>
    <div>
      <%= f.submit "Add Comment" %>
    </div>
  <% end %>
</section>